extends ../layout-tienda

block content
  div.container-fluid
    div.row.bg-faded

      div.col-md-5.pl-md-5
        div.card.card-body.h-100.justify-content-center.p-0
          img.card-img-top.h-100(src=articulo.imagen)
      
      div.col-md-7.pr-md-5
        div.card.h-100
          div.card-body
            h3.card-title.text-center #{articulo.nombre}
            hr
            p.card-text  #{articulo.descripcion} 
          div.card-footer
            p.card-text.m-0 
              small.text-muted Tallas disponibles: #{articulo.tallas}   
            p.card-text.m-0 
              small.text-muted Precio: #{articulo.precio}
            p.card-text.m-0 
              small.text-muted Material: #{articulo.material}
            p.card-text.m-0 
              small.text-muted Lugar de fabricación: #{articulo.lugar_de_fabricacion} 

    div.row
      div.col-md-12.pr-md-5
        if isAuthenticated && user.id == tienda.usuario
          div.text-right.mt-3
            a.btn.delete.mr-2(role="button" data-toggle='modal' data-target='#exampleModal') Borrar artículo
            a.btn.mr-2(href='/articulo/editar/' + articulo.id + "/" + articulo.categoria role="button") Editar artículo
            a.btn.cancel(href='javascript: history.go(-1)') Volver
    
  div#exampleModal.modal.fade.pr-0(tabindex='-1' role='dialog' aria-labelledby='exampleModalCenter' )
    div.modal-dialog(role='document')
      div.modal-content
        div.modal-header
          h4#exampleModalLabel.modal-title.text-center Borrar artículo
          button.close(type='button' data-dismiss='modal' aria-label='Close')
            span(aria-hidden='true') &times;
        div.modal-body
          p ¿Estás seguro de que quieres borrar este artículo?
        dov.modal-footer
          a.cancel.btn(type='button' data-dismiss='modal') Cancelar
          a.btn.delete(href='/articulo/borrar/' + articulo.id + '/' + tienda.id + '/' + articulo.categoria  role="button") Borrar


