extends ../layout

block content
  div.container.p-0
    p #{message}
    form.pl-sm-5.pr-sm-5.pt-sm-3.pb-sm-3.p-3(method="post")
      div.row

        div.col-sm-12.col-md-12.col-lg-12.w-100
          h4.text-center.mb-4 Crear nueva subcategor√≠a
          div.form-group
            label(for='nombre') Nombre
            input#nombre.form-control(type='text' placeholder='Nombre' name='nombre' required='true')

          div.text-right
            a.btn.cancel.mr-3(href='javascript: history.go(-1)') Cancelar
            button.btn(type='submit') Guardar
